/* Sky Blue Theme for Wordora */

body
  font-family: Arial, sans-serif
  background-color: #e0f7ff
  margin: 0
  padding: 0
  text-align: center

header
  background-color: #0099cc
  color: white
  padding: 20px
  font-size: 24px

nav
  background: #0077aa
  padding: 10px

nav a
  color: white
  text-decoration: none
  margin: 15px
  font-size: 18px

.container
  padding: 30px

footer
  background-color: #0099cc
  color: white
  padding: 15px
  position: absolute
  bottom: 0
  width: 100%
